{
  "hosting": {
    "site": "espensivo",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api",
        "region": "us-central1"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "region": "us-central1",
    "environmentVariables": {
      "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
    },
    "codebase": "default",
    "gen": 1,
    "minInstances": 0,
    "maxInstances": 10,
    "docker": {
      "healthCheck": {
        "path": "/health",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    },
    "secrets": [
      "ELASTIC_EMAIL_USERNAME",
      "ELASTIC_EMAIL_SMTP_PASSWORD",
      "ELASTIC_EMAIL_FROM_ADDRESS"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "auth": {
    "domain": "www.espensivo.com"
  }
}
